<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray">

        <!--<ImageView
            android:id="@+id/imgLoader"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:src="@drawable/location" />-->

        <com.github.ndczz.infinityloading.InfinityLoading
            android:id="@+id/loading"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            app:infl_backColor="@color/white"
            app:infl_drawBack="true"
            app:infl_reverse="true"
            app:infl_progressColor="@color/colorPrimary"
            app:infl_strokeWidth="4dp"
            android:layout_centerInParent="true"/>


        <ImageView
            android:id="@+id/thumb_gif_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


    </RelativeLayout>




</android.support.v7.widget.CardView>
